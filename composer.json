{
    "name": "rougin/slytherin",
    "description": "Yet Another Extensible PHP Library/Framework",
    "keywords": [
        "barebones",
        "extensible",
        "library",
        "mvc",
        "php",
        "slytherin"
    ],
    "homepage": "https://github.com/rougin/slytherin",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "container-interop/container-interop": "~1.0"
    },
    "require-dev": {
        "filp/whoops": "^1.1",
        "league/container": "^2.0",
        "nikic/fast-route": "^0.7.0",
        "phpunit/phpunit" : "4.*",
        "rdlowrey/auryn": "^1.1",
        "scrutinizer/ocular": "~1.1",
        "twig/twig": "^1.23",
        "zendframework/zend-diactoros": "^1.3",
        "zendframework/zend-stratigility": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Rougin\\Slytherin\\": "src",
            "Rougin\\Slytherin\\Containers\\": "src/IoC"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Slytherin\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6-dev"
        }
    }
}
