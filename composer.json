{
    "name": "rougin/slytherin",
    "description": "An extensible and SOLID-based PHP micro-framework.",
    "keywords": ["php framework", "php library", "slytherin"],
    "homepage": "https://github.com/rougin/slytherin",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "psr/container": "~1.0",
        "psr/http-message": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.5.0"
    },
    "autoload": {
        "psr-4": {
            "Rougin\\Slytherin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Slytherin\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}